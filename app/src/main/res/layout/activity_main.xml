<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xtroke1"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xtroke1"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Time to Pin"
            android:textColor="@color/X"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


    <EditText
        android:id="@+id/et_pin"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/xtroke1"
        android:gravity="center"
        android:hint="Please enter your pin."
        android:textColor="@color/X"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/tv_pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appname" />

    <TextView
        android:id="@+id/tv_pin"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/xtroke1"
        android:gravity="center"
        android:hint="Your in will appear here."
        android:textColor="@color/X"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pin" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:background="@drawable/xtroke"
        android:gravity="center"
        android:hint="Login"
        android:textColor="@color/X"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/Company_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pin" />

    <TextView
        android:id="@+id/Company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xtroke1"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="XOKSIS"
        android:textColor="@color/X"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>